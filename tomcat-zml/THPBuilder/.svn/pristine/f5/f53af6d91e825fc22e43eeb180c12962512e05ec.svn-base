<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thpower.scada.mapper.THPUserMapper">

	<select id="login" resultType="THPUser">
		select * from sys_users 
		where userEmail = #{0} and userPassword = #{1} 
		Limit 1;
	</select>	

	<select id="getAllUsers" resultType="THPUser">
		select * from sys_users
	</select>

	<select id="getUserByEmail" parameterType="String" resultType="THPUser">
		select * from sys_users 
		where userEmail = #{userEmail};
	</select>

	<select id="getUsersByRootId" parameterType="long" resultType="THPUser">
		select * from sys_users 
		where userRootId = #{userRootId};
	</select>		
	
    <update id="upateUserPassword" parameterType="THPUser">
            update sys_users 
            set userPassword=#{1}
            where userId=#{0};
    </update>  
     
    <update id="initUserPassword">
            update sys_users 
            set userPassword=#{1}
            where userId=#{0};
    </update>   
	
	<select id="select" parameterType="long" resultType="THPUser">
		select * from sys_users 
		where userId = #{userId};
	</select>
	
	<insert id="insert" parameterType="THPUser"  useGeneratedKeys="true" keyProperty="userId" >
	     insert into sys_users (userRootId, userEmail,  userName,  userPassword, userAge, userSex, userLevel, userIsValid, userNote, userCreateTime, userModifyTime) 
	     values (#{userRootId}, #{userEmail},  #{userName},  #{userPassword}, #{userAge}, #{userSex}, #{userLevel}, #{userIsValid}, #{userNote},#{userCreateTime},#{userModifyTime} );
    </insert>
    
    <update id="update" parameterType="THPUser">
            update sys_users 
            set userName=#{userName}, userAge=#{userAge} ,userSex=#{userSex} ,userLevel=#{userLevel} ,userIsValid=#{userIsValid} 
            where userId=#{userId};
    </update>    
    
	<delete  id="delete" parameterType="long">
		delete from sys_users 
		where userId = #{userId};
	</delete >
            
</mapper>