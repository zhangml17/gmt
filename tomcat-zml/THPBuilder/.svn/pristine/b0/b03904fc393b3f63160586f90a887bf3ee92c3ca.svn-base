@charset "UTF-8";

html,body{
    height: 100%;
    min-height: 100%;
}

.container{
    width: 900px;
    min-height: 100%;
    padding: 25px;
    margin: 0 auto;
    background-color: #47a7cc;
}

.container .left{
    float: left;
    width: 430px;
    padding: 0 5px;
    background-color: #fff;
    border-radius: 3px;
}
.container .right{
    float: right;
    width: 430px;
    padding: 0 5px;
    background-color: #fff;
    border-radius: 3px;
}
.title{
    text-align: center;
}
.form-wrap .field{
    padding: 8px;
}
.form-wrap .field input{
    width: 100%;
    height: 30px;
    border: 1px solid #ddd;
    border-radius: 3px;
    text-indent: 8px;
}
.form-wrap .field a{
    display: block;
    padding: 8px;
    text-align: center;
    text-decoration: none;
    color: #fff;
    background-color: #cc2925;
    border-radius: 3px;
}
.form-wrap .field a:hover{
    background-color: #e41d04;
}

.common-message{
    margin: 10px;
    padding: 6px;
    color: #fff;
    border-radius: 3px;
}
.send-text{
    background-color: #93c31d;
}

.receive-text{
    background-color: #ea6865;
}

.connect-text{
    color: #fff;
    font-size: 18px;
    font-weight: 700;
    clear: both;
    padding: 8px 0;
}