<!DOCTYPE>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
	<meta http-equiv="pragma" content="no-cache">
	<meta http-equiv="cache-control" content="no-cache">
	<meta http-equiv="Cache" content="no-cache">
	<meta http-equiv="expires" content="0">
	<title>THPower Cloud</title>
	<link href="../static/easyui/themes/default/easyui.css" rel="stylesheet" />
	<link href="../static/easyui/themes/icon.css" rel="stylesheet" />
	
	<script type="text/javascript" src="../static/easyui/jquery.min.js"></script>
	<script type="text/javascript" src="../static/easyui/jquery.easyui.min.js"></script>
	
	<script type="text/javascript" src="../main/public/thpowerutils.js"></script>
		
	<script type="text/javascript">

	//html打开时执行查询参数类别的信息
	$(function() {
		
		//类别信息
		$.ajax({
			type : 'POST',
			url : '/THPBuilder/getParaLabels',
			contentType: "application/x-www-form-urlencoded; charset=utf-8", 
			//contentType : 'application/json',
			//data : {},
			dataType : 'json',
			async : true,
			success : function(data, textStatus) {	
				
				//console.log(data);	

				//$('#showtypes').find("option").remove();//删除之前的数据
				$("#showtypes").empty();
				
                var s = '';
                for (var i = 0; i < data.length; i++)
               	{
                	if(data[i] === "ALL")
                	{
                   		s += '<option value=' + data[i] + ' selected="selected">' + data[i] + '</option>';
                		
                	}else
               		{
                   		s += '<option value=' + data[i] + '>' + data[i] + '</option>';               		
               		}
                }
                
                $('#showtypes').append(s);
                
                //自动查询
                query();
				
			},
			error : function(XMLHttpRequest, textStatus, errorThrown) {
				console.log("请求失败，无法获取分组数据");
			}
		});
		
		var IsCheckFlag=false;  //是否选中的标志
		var rowIndexTo=-1;      //保存当前保存的是那条数据
		
		//datagrid 初始化
		$('#dataGrid').datagrid({
		    height: 350,
		    //url: 'url',
		    method: 'POST',
		    //queryParams: { 'paraid': paraid },
		    idField: 'paraId',
		    striped: true,
		    fitColumns: true,
		    singleSelect: true,
		    checkOnSelect: true,
		    selectOncheck: true,
		    rownumbers: true,  //大于四位时会有问题，需注意
		    pagination: true,
		    nowrap: false,
		    pageSize: 10,
		    pageList: [10, 20, 50, 100, 150, 200],
		    showFooter: true,
		    columns: [[
		        { field: 'ck', checkbox: true },
		        { field: 'paraId', title: '标记', width: 50, align: 'center', hidden:'true' },
		        { field: 'paraCode', title: '编码', width: 100, align: 'center' },
		        { field: 'paraName', title: '名称', width: 100, align: 'center' },
		        { field: 'paraType', title: '类型', width: 80, align: 'center' },
		        { field: 'paraLabel', title: '类别', width: 80, align: 'center' },
		        { field: 'paraIndex', title: '序号', width: 50, align: 'center' },
		        { field: 'paraDescription', title: '描述', width: 150, align: 'center' },
		        { field: 'paraValue', title: '参数值', width: 150, align: 'center' },
		        { field: 'paraIsValid', title: '有效性', width: 80, formatter: isValid, align: 'center' },
		        { field: 'paraNote', title: '备注', width: 50, align: 'center' }
		    ]],
		    onBeforeLoad: function (param) {
		    },
		    onLoadSuccess: function (data) {
		    	//easyui datagrid 去掉 全选checkbox
		    	$(".datagrid-header-check").html("");		        
		    },
		    onLoadError: function () {		        
		    },
		    onClickCell: function (rowIndex, field, value) {		        
		    },
		    onSelect: function (rowIndex, rowData) {
		    	//easyui datagrid 单选取消选中
				if(rowIndexTo==rowIndex && IsCheckFlag){
				    IsCheckFlag = false;
				    rowIndexTo = -1;
					 $('#dataGrid').datagrid("unselectRow",rowIndex);
				 }else{
					 IsCheckFlag = true;
					 rowIndexTo = rowIndex;
				 }
			}    
		});
		
		
	})
	
	//数据格式转换：int类型，展示时，需要转换为String类型
	function isValid(value, row, index)
	{
		if(value==0)
		{
			return "否";
		}else if(value==1)
		{
			return "是";
		}else
		{
			return "?";
		}
	}
	
	
	//查询按钮
	function query() {
		var paralabel = $('#showtypes').val();
		
		//if(paratype ==="ALL") paratype="";			
		//console.log(paratype);
		
		$.ajax({
			type : 'POST',
			url : '/THPBuilder/getAllParas',
			//contentType : 'application/json',
			data : {'paralabel' : paralabel},
			dataType : 'json',
			async : true,
			success : function(data, textStatus) {					
				//console.log(data);			
				
				$("#dataGrid").datagrid("loadData", data.rows);  //动态取数据
				
			},
			error : function(XMLHttpRequest, textStatus, errorThrown) {
				console.log("请求失败，无法获取分组数据");
			}
		});
	}
	
	//new data
	function newItem()
	{
		$('#dlg').dialog('open').dialog('setTitle', '新增参数');
		$('#fm').form('clear');	
		
		url = "/THPBuilder/insertPara";
	}
	
	//edit data
	function editItem()
	{
		var row = $('#dataGrid').datagrid('getSelected');
		if (row){
			$('#dlg').dialog('open').dialog('setTitle','编辑参数');
			$('#fm').form('load', row);
			url = '/THPBuilder/updatePara?paraId='+row.paraId;
		}else
		{
			$.messager.show({
				title: '提示',
				msg: "请选中参数行！"
			});
		}
	}
	
	//delete data
	function deleteItem()
	{
		var row = $('#dataGrid').datagrid('getSelected');
		if (row){
			$.messager.confirm('确认','请确认,您要删除此参数吗？',function(r){
				if (r){
					$.post('/THPBuilder/deletePara',{paraId:row.paraId},function(result){
						if (result.errorMsg){
							$.messager.show({
								title: 'Error',
								msg: result.errorMsg
							});
						} else {
							$('#dataGrid').datagrid('reload');	// reload the user data
						}
					},'json');
				}
			});
		}else
		{
			$.messager.show({
				title: '提示',
				msg: "请选中参数行！"
			});
		}
		
	}
	
	//save data
	function saveItem(){
		$('#fm').form('submit',{
			url: url,
			onSubmit: function(){
				return $(this).form('validate');
			},
			success: function(result){
				var result = eval('('+result+')');
				if (result.errorMsg){
					$.messager.show({
						title: 'Error',
						msg: result.errorMsg
					});
				} else {
					$('#dlg').dialog('close');		// close the dialog
					$('#dataGrid').datagrid('reload');	// reload the user data
				}
			}
		});
	}
	
</script>
</head>
<body>
	<div>
	<b>选择类型:</b>
	<select id="showtypes" style="width: 120px; height: 24px;" >
	</select>
	<a href="javascript:query();" class="easyui-linkbutton" iconCls="icon-search">查 询</a>
	</div>
	<table id="dataGrid" class="easyui-datagrid" style="width:100%;height:300px"
		toolbar="#toolbar" rownumbers="true" fitColumns="true" singleSelect="true">
        <thead>
            <tr></tr>
         </thead>
    </table>
    <div id="toolbar">
		<a href="#" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="newItem()">新增</a>
		<a href="#" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="editItem()">编辑</a>
		<a href="#" class="easyui-linkbutton" iconCls="icon-remove" plain="true" onclick="deleteItem()">删除</a>
	</div>
	
	<div id="dlg" class="easyui-dialog" style="width:300px;height:300px;padding:10px 20px"
		closed="true" buttons="#dlg-buttons">
	<div class="ftitle"></div>
	
	<form id="fm" method="post">
		<div class="fitem">
			<label>编  码:</label>
			<input name="paraCode" class="easyui-validatebox" required="true">
		</div>
		<div class="fitem">
			<label>类   型:</label>
			<select name="paraType" class="easyui-combobox" style="width:175px;" required="true">
			<option value=“String”>String</option>
			<option value="Number">Number</option>
			<option value="Bool">Bool</option>
			</select>
		</div>
		<div class="fitem">
			<label>类   别:</label>
			<input name="paraLabel" class="easyui-validatebox" required="true">
		</div>
		<div class="fitem">
			<label>序   号:</label>
			<input name="paraIndex" class="easyui-validatebox" required="true">
		</div>
		<div class="fitem">
			<label>名   称:</label>
			<input name="paraName" class="easyui-validatebox" required="true">
		</div>
		<div class="fitem">
			<label>描   述:</label>
			<input name="paraDescription" type="text">
		</div>
		<div class="fitem">
			<label>数   值:</label>
			<input name="paraValue" class="easyui-validatebox" required="true">
		</div>
		<div class="fitem">
			<label>有   效:</label>
			<select name="paraIsValid" class="easyui-combobox" style="width:175px;">
			<option value=1>是</option>
			<option value=0>否</option>
			</select>
		</div>
		<div class="fitem">
			<label>备   注:</label>
			<input name="paraNote">
		</div>
	</form>
	</div>
	<div id="dlg-buttons">
		<a href="#" class="easyui-linkbutton" iconCls="icon-ok" onclick="saveItem();">保存</a>
		<a href="#" class="easyui-linkbutton" iconCls="icon-cancel" onclick="javascript:$('#dlg').dialog('close')">取消</a>
	</div>
</body>
</html>